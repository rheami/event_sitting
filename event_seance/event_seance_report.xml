        <template id="report_event_seance_document">
            <t t-call="report.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-xs-6">
                                    <strong><span t-field="o.name"/></strong>
                                    <p t-field="o.type"/> 
                                    (<span t-field="o.date_begin"/> > <span t-field="o.date_end"/>)
                        </div>
                        <div class="col-xs-5 col-xs-offset-1">
                                    <div t-field="o.address_id"
                                        t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                        </div>
                    </div>
        
                    <div><br/></div>
                    
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th class="text-center">Description</th>
                                <th class="text-center">Date begin</th>
                                <th class="text-center">Date end</th>
                                <th>Duration</th>
                                <th class="text-center">Room</th>
                            </tr>
                        </thead>
                        <tbody >
                            <tr t-foreach="o.seance_ids" t-as="l">
                                <td><span t-field="l.name"/></td>
                                <td><span t-field="l.description"/></td>
                                <td class="text-center"><span t-field= "l.date_begin_seance"/></td>
                                <td class="text-center"><span t-field= "l.date_end_seance"/></td>
                                <td class="text-center"><span t-field= "l.duration"/></td>
                                <td><span t-field="l.local"/></td>
                            </tr>
                        </tbody>
                        </table>
                    
                </div>
            </t>
        </template>
 

    </data>

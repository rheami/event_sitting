<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <report
            id="report_event_sitting"
            model="event.event"
            string="Liste des sÃ©ances"
            name="event_sitting.report_sitting"
            file="event_sitting.report_sitting"
            report_type="qweb-pdf" />
        
        <template id="report_sitting">
            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'organizer_id.lang',
                     'event_sitting.report_event_sitting_document')"/>
                </t>
            </t>
        </template>
               
        <template id="report_event_sitting_document">
            <t t-call="report.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-xs-6">
                                    <strong><span t-field="o.name"/></strong>
                                    <p t-field="o.type"/> 
                                    (<span t-field="o.date_begin" t-field-options='{"format": "dd/MM/yyyy"}'/> > <span t-field="o.date_end" t-field-options='{"format": "dd/MM/yyyy"}'/>)
                        </div>
                        <div class="col-xs-5 col-xs-offset-1">
                                    <div t-field="o.address_id"
                                        t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                        </div>
                    </div>
        
                    <div><br/></div>
                    
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th class="text-center">Date begin</th>
                                <th class="text-center">Date end</th>
                                <th class="text-center">Duration</th>
                                <th class="text-center">Room</th>
                            </tr>
                        </thead>
                        <tbody >
                            <tr t-foreach="o.sitting_ids" t-as="l">
                                <td><span t-field="l.name"/></td>
                                <td><span t-field="l.description"/></td>
                                <td class="text-center"><span t-field= "l.date_begin_sitting" t-field-options='{"format": "dd/MM/yyyy hh:mm"}'/></td>
                                <td class="text-center"><span t-field= "l.date_end_sitting" t-field-options='{"format": "dd/MM/yyyy hh:mm"}'/></td>
                                <td class="text-center"><span t-field= "l.duration"/> heure(s)</td>
                                <td class="text-center"><span t-field="l.local"/></td>
                            </tr>
                        </tbody>
                        </table>
                    
                </div>
            </t>
        </template>
 

    </data>
</openerp>
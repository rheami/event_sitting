<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="seance_form_view">
            <field name="name">seance.form</field>
            <field name="model">seance.seance</field>
            <field name="arch" type="xml">
                <form string="seance Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="seance_date"/>
                            <field name="duration"/>
                            <field name="local"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- window action -->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->
        <record model="ir.actions.act_window" id="seance_list_action">
            <field name="name">seance</field>
            <field name="res_model">seance.seance</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Créer la premiere séance
                </p>
            </field>
        </record>

        <!-- top level menu: no parent -->
        <menuitem id="main_seance_menu" name="Seance"/>
        <!-- A first level in the left side menu is needed
             before using action= attribute -->
        <menuitem id="seance_menu" name="Seance"
                  parent="main_seance_menu"/>
        <!-- the following menuitem should appear *after*
             its parent openacademy_menu and *after* its
             action course_list_action -->
        <menuitem id="seances_menu" name="Séances" parent="seance_menu"
                  action="seance_list_action"/>
    </data>
</openerp>